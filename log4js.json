{
  "appenders": [
    {
      "type": "console",
      "appenders": [
        {
          "type": "logLevelFilter",
          "level": "ERROR",
          "appender": {
            "type": "file",
            "filename": "errors.log"
          }
        }
      ]
    },
    {
      "type": "clustered",
      "appenders": [
        {
          "type": "dateFile",
          "filename": "http.log",
          "pattern": "-yyyy-MM-dd",
          "category": "http"
        },
        {
          "type": "file",
          "filename": "app.log",
          "maxLogSize": 10485760,
          "numBackups": 5
        }
      ]
    }
  ]
}